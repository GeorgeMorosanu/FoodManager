                            <div class="row" name="ingredient row">
                                <div class="col-lg-7">
                                    <p class="ingred-p">Cheese</p>
                                </div>
                                <div class="col-lg-5">
                                    <p class="ingred-p" style="text-align: right;">600 gr</p>
                                </div>
                            </div>
                            <div class="row" name="ingredient row">
                                <div class="col-lg-7">
                                    <p class="ingred-p">Yogurt</p>
                                </div>
                                <div class="col-lg-5">
                                    <p class="ingred-p" style="text-align: right;">1.8 L</p>
                                </div>
                            </div>
                            <div class="row" name="ingredient row">
                                <div class="col-lg-7">
                                    <p class="ingred-p">Eggs</p>
                                </div>
                                <div class="col-lg-5">
                                    <p class="ingred-p" style="text-align: right;">2 pc</p>
                                </div>
                            </div>
                            <div class="row" name="ingredient row">
                                <div class="col-lg-7">
                                    <p class="ingred-p">Pizza bottom</p>
                                </div>
                                <div class="col-lg-5">
                                    <p class="ingred-p" style="text-align: right;">6 pc</p>
                                </div>
                            </div>
                            <div class="row" name="ingredient row">
                                <div class="col-lg-7">
                                    <p class="ingred-p">Pasta</p>
                                </div>
                                <div class="col-lg-5">
                                    <p class="ingred-p" style="text-align: right;">1.4kg</p>
                                </div>
                            </div>
                            <div class="row" name="ingredient row">
                                <div class="col-lg-7">
                                    <p class="ingred-p">Beef</p>
                                </div>
                                <div class="col-lg-5">
                                    <p class="ingred-p" style="text-align: right;">800 gr</p>
                                </div>
                            </div>
                            <div class="row" name="ingredient row">
                                <div class="col-lg-7">
                                    <p class="ingred-p">Tomatos</p>
                                </div>
                                <div class="col-lg-5">
                                    <p class="ingred-p" style="text-align: right;">600 gr</p>
                                </div>
                            </div>
                            <div class="row" name="ingredient row">
                                <div class="col-lg-7">
                                    <p class="ingred-p">Lettuce</p>
                                </div>
                                <div class="col-lg-5">
                                    <p class="ingred-p" style="text-align: right;">1 kg</p>
                                </div>
                            </div>
                            <div class="row" name="ingredient row">
                                <div class="col-lg-7">
                                    <p class="ingred-p">Hot dogs</p>
                                </div>
                                <div class="col-lg-5">
                                    <p class="ingred-p" style="text-align: right;">4 pc</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-1 my-auto nopadding h-100" style="min-height: 50vh">
                <div class="panel panel-primary h-100 borderfix-left borderbottomfix">
                    <div class="panel-heading" style="margin-bottom: 15px; border-radius: 0px">Monday</div>
                    <div id="monday" style="min-height: 50vh">
                        @foreach (var wm in context.WeekMeals.Where(x => x.Day == 0))
                        {
                            var meal = context.Meals.Where(x => x.Id == wm.MealId).FirstOrDefault();
                            <div>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>@meal.Name</th>
                                            <th>@meal.PreparationTime</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        }
                    </div>
                    <div class="bottom">
                        <button id="monday-button" type="button" class="btn btn-primary add-meal-button" data-toggle="modal" data-target="#exampleModal">
                            Add meal
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-lg-1 my-auto nopadding h-100" style="min-height: 50vh">
                <div class="panel panel-primary h-100 borderbottomfix" style="border-radius: 0px">
                    <div class="panel-heading" style="margin-bottom: 15px; border-radius: 0px">Tuesday</div>
                    <div id="tuesday" ondrop="drop(event)" ondragover="allowDrop(event)" style="min-height: 50vh">
                        @foreach (var wm in context.WeekMeals.Where(x => x.Day == 1))
                        {
                            var meal = context.Meals.Where(x => x.Id == wm.MealId).FirstOrDefault();
