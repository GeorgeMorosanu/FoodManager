                    </div>
                    <div class="bottom">
                        <button id="thursday-button" type="button" class="btn btn-primary add-meal-button" data-toggle="modal" data-target="#exampleModal">
                            Add meal
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-lg-1 my-auto nopadding h-100" style="min-height: 50vh">
                <div class="panel panel-primary h-100 borderbottomfix" style="border-radius: 0px">
                    <div class="panel-heading" style="margin-bottom: 15px; border-radius: 0px">Friday</div>
                    <div id="friday" style="min-height: 50vh">
                        @foreach (var wm in context.WeekMeals.Where(x => x.Day == 4))
                        {
                            var meal = context.Meals.Where(x => x.Id == wm.MealId).FirstOrDefault();
