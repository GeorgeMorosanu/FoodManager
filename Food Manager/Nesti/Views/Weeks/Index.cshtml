@model IEnumerable<Nesti.Data.Entities.Week>

@using Nesti.Data;
@inject NsContext context;

@{
    ViewData["Title"] = "Index";
}
<header>
    <div class="container-fluid h-100">
        <div class="row h-100">
            <div class="col-lg-4 my-auto h-100">
