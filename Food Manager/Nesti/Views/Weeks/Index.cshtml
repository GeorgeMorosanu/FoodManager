                        }
                    </div>
                    <div class="bottom">
                        <button id="friday-button" type="button" class="btn btn-primary add-meal-button" data-toggle="modal" data-target="#exampleModal">
                            Add meal
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-lg-1 my-auto nopadding h-100" style="min-height: 50vh">
                <div class="panel panel-primary h-100 borderbottomfix" style="border-radius: 0px">
                    <div class="panel-heading" style="margin-bottom: 15px; border-radius: 0px">Saturday</div>
                    <div id="saturday" style="min-height: 50vh">
                        @foreach (var wm in context.WeekMeals.Where(x => x.Day == 5))
                        {
                            var meal = context.Meals.Where(x => x.Id == wm.MealId).FirstOrDefault();
                            <div>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>@meal.Name</th>
                                            <th>@meal.PreparationTime</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        }

                        <div class="bottom">
                            <button id="saturday-button" type="button" class="btn btn-primary add-meal-button" data-toggle="modal" data-target="#exampleModal">
                                Add meal
                            </button>
                        </div>

                    </div>
                </div>
            </div>
            <div class="col-lg-1 my-auto nopadding h-100" style="min-height: 50vh">
                <div class="panel panel-primary h-100 borderbottomfix borderfix-right">
                    <div class="panel-heading" style="margin-bottom: 15px; border-radius: 0px">Sunday</div>
                    <div id="sunday" style="min-height: 50vh">
                        @foreach (var wm in context.WeekMeals.Where(x => x.Day == 6))
                        {
